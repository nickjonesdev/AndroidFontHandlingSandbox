<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Font">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">17sp</item>
    </style>


    <!-- Font - Acumin_Regular -->
    <style name="Font.Regular">
        <item name="fontFamily">@font/app_font__acumin_regular</item>
    </style>

    <style name="Font.Regular.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Regular.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Regular.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>


    <!-- Font - Acumin_Medium -->
    <style name="Font.Medium">
        <item name="fontFamily">@font/app_font__acumin_medium</item>
    </style>

    <style name="Font.Medium.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Medium.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>


    <!-- Font - Acumin_Bold -->
    <style name="Font.Bold">
        <item name="fontFamily">@font/app_font__acumin_bold</item>
    </style>

    <style name="Font.Bold.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Bold.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Bold.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>


    <!-- Font - Acumin_Black -->
    <style name="Font.Black">
        <item name="fontFamily">@font/app_font__acumin_black</item>
    </style>

    <style name="Font.Black.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Font.Black.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Font.Black.BoldItalic">
        <item name="android:textStyle">bold|italic</item>
    </style>

</resources>

